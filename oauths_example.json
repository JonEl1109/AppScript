/*
  Author: Jonathan Lum
  Date Modified: 2020-03-08
  Script Name: appscript.json

  Brief Description: This is an example of editing the manifest filed in a appscript project so OAuth is allowed to access multiple apps.

  Notes:
    <no notes>
*/

{
  "timeZone": "America/Los_Angeles",
  "dependencies": {
    "enabledAdvancedServices": [{
      "userSymbol": "Plx",
      "serviceId": "plx",
      "version": "v1"
    }]
  },
  "exceptionLogging": "STACKDRIVER",
  "runtimeVersion": "V8",
  "oauthScopes": [
    "https://www.googleapis.com/auth/documents",
    "https://www.googleapis.com/auth/spreadsheets.currentonly",
    "https://www.googleapis.com/auth/spreadsheets",
    "https://www.googleapis.com/auth/plx",
    "https://www.googleapis.com/auth/drive",
    "https://www.googleapis.com/auth/userinfo.email",
    "https://www.googleapis.com/auth/script.send_mail"
  ]
}
